<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:p1="http://schemas.android.com/apk/res/android"
    p1:minWidth="25px"
    p1:minHeight="25px"
    p1:layout_width="fill_parent"
    p1:layout_height="fill_parent"
    p1:id="@+id/tableLayout1"
    p1:stretchColumns="1">
    <TableRow
        p1:id="@+id/tableRow1">
        <TextView
            p1:text="Benutzername: "
            p1:textAppearance="?android:attr/textAppearanceMedium"
            p1:layout_column="0"
            p1:id="@+id/textView_uname"
            p1:layout_marginLeft="0.0dp" />
        <EditText
            p1:layout_column="1"
            p1:id="@+id/editText_uname"
            p1:layout_width="125.3dp"
            p1:singleLine="true" />
    </TableRow>
    <TableRow
        p1:id="@+id/tableRow2">
        <TextView
            p1:text="Passwort:"
            p1:textAppearance="?android:attr/textAppearanceMedium"
            p1:layout_column="0"
            p1:id="@+id/textView_pwd" />
        <EditText
            p1:inputType="textPassword"
            p1:layout_column="1"
            p1:id="@+id/editText_pwd" />
    </TableRow>
    <TableRow
        p1:id="@+id/tableRow3">
        <TextView
            p1:text="Schule:"
            p1:textAppearance="?android:attr/textAppearanceMedium"
            p1:layout_column="0"
            p1:id="@+id/textView_school" />
        <Spinner
            p1:layout_column="1"
            p1:id="@+id/spinner_school" />
        <ProgressBar
            style="?android:attr/progressBarStyleSmall"
            p1:layout_column="2"
            p1:id="@+id/progressBar1" />
    </TableRow>
    <TableRow
        p1:id="@+id/tableRow4">
        <Button
            p1:text="Login"
            p1:layout_column="1"
            p1:id="@+id/button_login"
            p1:layout_marginTop="18.7dp" />
    </TableRow>
</TableLayout>